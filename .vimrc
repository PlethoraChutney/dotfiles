" indentation options
set tabstop=4
set shiftwidth=4
set autoindent
set smartindent

" search settings
set incsearch
set ignorecase
set smartcase
set wildmenu
set wildmode=list:longest
set wildignore=*.docx,*.jpg,*.png,*.gif,*.pdf,*.pyc,*.exe,*.img,*.xlsx

" text render
set encoding=utf-8
set scrolloff=5
syntax enable

" UI
set belloff=all
set number

" other
set nocompatible
filetype on
filetype plugin on
filetype indent on
set backspace=indent,eol,start
