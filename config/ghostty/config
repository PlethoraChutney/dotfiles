# font
font-family = "Monaspace Argon Var"
font-feature = calt
font-feature = ss01
font-feature = ss02
font-feature = ss03
font-feature = liga
font-size = 14
window-inherit-font-size = false

# theme
theme = light:catppuccin-latte,dark:catppuccin-mocha
window-theme = system

# splits
unfocused-split-opacity=0.5

##  split creation
keybind = ctrl+k>k=new_split:up
keybind = ctrl+k>j=new_split:down
keybind = ctrl+k>l=new_split:right
keybind = ctrl+k>h=new_split:left

##  split navigation
keybind = super+shift+a=goto_split:left
keybind = super+shift+w=goto_split:top
keybind = super+shift+s=goto_split:bottom
keybind = super+shift+d=goto_split:right

## split resize
keybind = super+shift+left=resize_split:left,50
keybind = super+shift+up=resize_split:up,50
keybind = super+shift+down=resize_split:down,50
keybind = super+shift+right=resize_split:right,50
