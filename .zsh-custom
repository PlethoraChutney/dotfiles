# has to be different if connected over OHSU VPN
vpndisp () {
        ip addr show eth2 &>/dev/null
        if [ $? -eq 0 ]; then
                DISPLAY=$(ip addr show eth2 | grep inet\ | awk '{gsub("/.*", "", $2)}; {print $2}'):0
        fi
}

